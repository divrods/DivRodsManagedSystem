extends layout

block content
  h1= title
  p= message
  ul
    each element in sessions
        div
            span= "Session ID: " + element.ID
            br
            span= "Location: " + element.Location
            br
            span= "Active? " + element.Awake
            br
            span= "Began: " + element.Started
            br
            span= "Path Object: (" + element.Current_Path.steps + ")"
                each step in element.Current_Path.journey
                    p= "Room " + step.room + ", at " + step.coords
        br
        br
    else
        p There are currently no sessions.
