extends layout

block content
  h1= title
  p Welcome to #{title}
  p= message
  ul
    each element in sessions
        div
            span= "Session ID: " + element.ID
            br
            span= "Location: " + element.Location
            br
            span= "Active? " + element.Awake
            br
            span= "Began: " + element.Started
            br
            br
    else
        p There are currently no sessions.
